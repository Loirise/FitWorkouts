<% layout('./layouts/boilerplate.ejs') %>
<div class="card w-100 w-md-75 w-lg-50 p-5 mx-auto my-auto">
    <div class="card-body divcard">
        <h5 class="card-title text-center fw-bold mb-5"><%= plan.title %></h5>
        <div class="d-flex justify-content-evenly border-top border-bottom mb-3 py-3">
            <h6 class="card-subtitle text-muted"><%= plan.level %></h6>
            <h6 class="card-subtitle text-muted"><%= plan.duration %> weeks</h6>
            <h6 class="card-subtitle text-muted"><%= plan.days %>days/week</h6>
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Exercise</th>
                    <th scope="col">Sets</th>
                    <th scope="col">Reps</th>
                </tr>
            </thead>
            <tbody>
            <% for(let i=0; i < plan.exercises.length; i++){ %>
                <tr>
                    <% if (plan.exercises[i] && plan.sets[i] && plan.reps[i]) { %>
                    <th scope="row"></th>
                    <td><%= plan.exercises[i] %></td>
                    <td><%= plan.sets[i] %></td>
                    <td><%= plan.reps[i] %></td>
                    <% } %>
                </tr>
            <% } %>
            </tbody>
        </table>
        <div class="d-flex justify-content-around mt-4">
            <a href="/trainingplans" class="card-link btn btn-primary">Go Back</a>
            <% if (currentUser && plan.author.equals(currentUser._id)) { %>
            <a href="/trainingplans/<%= plan._id %>/edit" class="card-link btn btn-info mx-2">Edit Plan</a>
            <form action="/trainingplans/<%= plan._id %>?_method=DELETE" method="POST" class="d-inline"><button type="submit" class="btn btn-danger">DELETE</button></form>
            <% } %>
        </div>
    </div>
</div>
