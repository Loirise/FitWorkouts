<% if (success && success.length) { %>
    <div class="alert alert-success fade show w-50 mx-auto d-flex justify-content-between" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger fade show w-50 mx-auto d-flex justify-content-between" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>