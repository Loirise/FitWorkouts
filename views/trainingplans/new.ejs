<% layout('./layouts/boilerplate.ejs') %>
<section class="w-50 mx-auto">
    <div class="d-flex justify-content-between mt-2">
        <a href="/trainingplans" class="btn btn-primary">Go Back</a>
        <label for="submit-btn" tabindex="0" class="btn btn-success">Create plan</label>
    </div>
    <form action="/trainingplans" method="POST">
        <button type="submit" id="submit-btn" hidden></button>
        <label for=""></label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="title">Title</span>
            <input type="text" class="form-control" name="trainingplan[title]" placeholder="New Training Program" aria-label="Title" aria-describedby="title">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="price">Price</span>
            <input type="number" class="form-control" name="trainingplan[price]"  aria-label="Price" aria-describedby="price" min="1" max="300" value="10.00" step="0.01">
            <span class="input-group-text">$</span>
        </div>
        <div class="d-flex justify-content-between">
            <div class="input-group mb-3 me-2">
                <span class="input-group-text" id="duration">Duration</span>
                <input type="number" class="form-control" name="trainingplan[duration]"  aria-label="Duration" aria-describedby="duration" min="1" max="52" value="4" step="1">
                <span class="input-group-text">weeks</span>
            </div>
            <div class="input-group mb-3 ms-2">
                <span class="input-group-text" id="days">Days</span>
                <input type="number" class="form-control" name="trainingplan[days]"  aria-label="Days" aria-describedby="days" min="1" max="7" value="3" step="1">
                <span class="input-group-text">/ week</span>
            </div>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="level">Level of advancement</label>
            <select class="form-select" id="level" name="trainingplan[level]">
                <option value="beginner">beginner</option>
                <option value="intermediate">intermediate</option>
                <option value="advance">advance</option>
            </select>
        </div>


    </form>
</section>
